	  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
	  <script type="text/javascript" src="js/pharmacist-main.js"></script>
	  <script type="text/javascript " src="js/main.js "></script>
   </body>
</html>